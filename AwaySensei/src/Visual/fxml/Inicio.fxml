                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </bottom>
   <top>
      <ImageView fitHeight="150.0" fitWidth="600.0" BorderPane.alignment="CENTER">
         <image>
            <Image url="@Images/inv_awaySensei.png" />
